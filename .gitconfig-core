# Best practices for configuring Git

[branch]
	autosetuprebase = always

[rebase]
	autosquash = true

[diff]
	renames = true

[core]
	mergeoptions = --no-ff
	editor = vim

[push]
	default = simple

[filter "media"]
	clean = git media clean %f
	smudge = git media smudge %f
	required = true

[remote "origin"]
	prune = true
